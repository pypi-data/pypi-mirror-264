POST http://org1.example.cc.distribute-compute.cn/api/core/v1/namespace/example-ns/proposal
{
    "apiVersion": "core/v1",
    "kind": "proposal",
    "metadata": {
        "name": "create-query-contract",
        "namespace": "example-ns"
    },
    "spec": {
        "actions": [
            {
                "create": {
                    "object": {
                        "apiVersion": "core/v1",
                        "kind": "contract",
                        "metadata": {
                            "name": "query-contract",
                            "version": "0.0.1",
                            "namespace": "example-ns"
                        },
                        "spec": {
                            "content": "site A, B;\nsite fn@B proxy(str: string): string;\nfn main(arg: string) {\nlet res: string@A = proxy(arg)@B;\nprint(res)@A;\n}",
                            "functions": {
                                "proxy": 4
                            },
                            "execPatterns": [
                                [
                                    "wx-org1.chainmaker.org",
                                    "wx-org2.chainmaker.org"
                                ]
                            ]
                        }
                    }
                }
            }
        ]
    }
}

HTTP 201
[Captures]
proposal_uid: body

# 组织1 批准这一提议
PUT http://org1.example.cc.distribute-compute.cn/api/core/v1/proposal/{{ proposal_uid }}/permission
{
  "comment": "comment_from_org1"
}

HTTP 200

# 组织2 批准这一提议
PUT http://org2.example.cc.distribute-compute.cn/api/core/v1/proposal/{{ proposal_uid }}/permission
{
  "comment": "comment_from_org2"
}

HTTP 200

# 组织1 批准合约
PUT http://org1.example.cc.distribute-compute.cn/api/core/v1/proposal/{{ proposal_uid }}/commit

HTTP 200

GET http://org1.example.cc.distribute-compute.cn/api/core/v1/proposal/{{ proposal_uid }}

HTTP 200


